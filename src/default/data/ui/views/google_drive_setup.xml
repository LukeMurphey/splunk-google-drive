<dashboard script="google_drive_setup.js" stylesheet="google_drive_setup.css" hideAppBar="true" hideEdit="true" hideTitle="true" isDashboard="false">
  <label>Google Drive Setup</label>
  <row>
    <panel>
      <html>
      	<div id="google_drive_setup_view">
			<h2>Google Drive Setup</h2>
			
			<p>
				This app requires a Google service account in order to authenticate with Google Drive.
			</p>
			
			<p>
				<a class="external" target="_blank" href="http://lukemurphey.net/projects/splunk-google-docs/wiki/How_to_setup_app">How to generate a service account key</a>.
			</p>
				
			<div class="show_when_no_key">

				<div action="#" class="form form-complex">
					<div class="control-group">
						<label for="#" class="control-label">Service Account Client Email</label>
						<div class="controls controls-block">
							<input type="text" disabled="true" />
							<span class="control-feedback">No account key is defined</span>
						</div>
					</div>
	            </div>

			</div>
			
			<div class="show_when_with_key">
	
				<div action="#" class="form form-complex">
					<div class="control-group">
						<label for="#" class="control-label">Service Account Client Email</label>
						<div class="controls controls-block">
							<input id="service_account_email" type="text" disabled="true" />
							<span class="control-feedback">A service account key is defined.</span>
						</div>
					</div>
	            </div>
			</div>
			
			<div id="drop-zone">
			</div>
			
		    <input type="file" id="import-file-input" />
		    <button class="btn active btn-primary" id="choose-import-file">Select file to import</button>
		    
		    <!-- 
		    <div class="drag-and-drop-tip">
		    	<strong>Tip:</strong> You can drag and drop a service account key file this dialog to import it directly
		    </div>
		     -->
	    </div>
      </html>
    </panel>
  </row>
</dashboard>
