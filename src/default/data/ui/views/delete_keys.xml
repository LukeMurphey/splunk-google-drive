<form>
  <label>Delete Keys</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="realm">
      <label>Account</label>
      <fieldForLabel>realm</fieldForLabel>
      <fieldForValue>realm</fieldForValue>
      <search>
        <query>| rest /servicesNS/nobody/google_drive/storage/passwords | table realm clear_password</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>|makeresults | eval username="$realm$" | deletegooglekey</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>
